# ===================================
# BINANCE API CONFIGURATION
# ===================================
# Get your testnet API keys from: https://testnet.binance.vision/
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Production API keys (ONLY use when ready for real trading)
BINANCE_API_KEY=your_production_api_key_here
BINANCE_API_SECRET=your_production_api_secret_here

# Use testnet (true) or production (false)
USE_TESTNET=true

# ===================================
# TRADING CONFIGURATION
# ===================================
# Symbols to trade (comma-separated, no spaces)
# Recommended: 4-8 pairs for diversification
SYMBOLS=BTC/USDT,ETH/USDT,BNB/USDT,SOL/USDT,ADA/USDT,DOT/USDT

# Timeframe for analysis (1m, 5m, 15m, 1h, 4h, 1d)
TIMEFRAME=1h

# Initial capital for backtesting (USDT)
INITIAL_CAPITAL=10000

# ===================================
# RISK MANAGEMENT
# ===================================
# Risk per trade as percentage of total capital (e.g., 2 = 2%)
RISK_PER_TRADE=2

# Maximum number of concurrent positions
MAX_POSITIONS=3

# Stop loss percentage (e.g., 2 = 2% below entry price)
STOP_LOSS_PERCENT=2

# Take profit percentage (e.g., 4 = 4% above entry price)
TAKE_PROFIT_PERCENT=4

# Maximum total portfolio exposure (percentage of capital, e.g., 50 = 50%)
MAX_PORTFOLIO_EXPOSURE=50

# ===================================
# STRATEGY CONFIGURATION
# ===================================
# STRATEGY CONFIGURATION
# ===================================
# Strategy to use: SMA_CROSS, RSI_BB, or BOTH
STRATEGY=BOTH

# SMA Cross Strategy Parameters
SMA_SHORT_PERIOD=20
SMA_LONG_PERIOD=50

# RSI + Bollinger Bands Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
BB_PERIOD=20
BB_STD=2.0


# ===================================
# EXECUTION MODE
# ===================================
# Execute real orders (true) or simulate only (false)
# WARNING: Set to false for paper trading!
EXECUTE_REAL=false

# ===================================
# BOT CONFIGURATION
# ===================================
# Update interval in seconds (how often to check for signals)
UPDATE_INTERVAL=300

# ===================================
# KILL SWITCH (Risk Protection)
# ===================================
# Enable kill switch (true/false)
ENABLE_KILL_SWITCH=true

# Stop trading if drawdown exceeds this percentage
MAX_DRAWDOWN_PERCENT=10

# Stop trading after this many consecutive losses
MAX_CONSECUTIVE_LOSSES=5

# Cool-down period in minutes before resuming (after kill switch activates)
KILL_SWITCH_COOLDOWN_MINUTES=60

# ===================================
# SCALPING CONFIGURATION
# ===================================
# Enable scalping strategies (true/false)
ENABLE_SCALPING=false

# Scalping timeframes (comma-separated: 5m, 15m, etc.)
SCALPING_TIMEFRAMES=5m,15m

# Scalping risk parameters (tighter than regular trading)
SCALP_STOP_LOSS_PERCENT=0.6
SCALP_TAKE_PROFIT_PERCENT=1.0

# EMA Scalping Strategy
EMA_FAST_PERIOD=8
EMA_SLOW_PERIOD=21

# Volume Analysis
VOLUME_SPIKE_THRESHOLD=1.5
ENABLE_VOLUME_FILTER=true

# ===================================
# TELEGRAM NOTIFICATIONS
# ===================================
# Enable Telegram notifications (true/false)
TELEGRAM_ENABLED=false

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# Telegram Chat ID (your user ID or group ID)
TELEGRAM_CHAT_ID=



# ===================================
# BACKTESTING CONFIGURATION
# ===================================
# Commission rate (e.g., 0.1 = 0.1%)
COMMISSION_RATE=0.1

# Slippage rate (e.g., 0.05 = 0.05%)
SLIPPAGE_RATE=0.05

# ===================================
# LOGGING
# ===================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log to file (true/false)
LOG_TO_FILE=true

# Log to console (true/false)
LOG_TO_CONSOLE=true
